<!DOCTYPE html>
<html>
<head>
    <title>ProxyFlow Admin</title>
    <style>
        body { font-family: sans-serif; background: #121212; color: white; padding: 20px; }
        .card { background: #1e1e1e; padding: 15px; border-radius: 8px; flex: 1; border: 1px solid #333; text-align: center; }
        table { width: 100%; border-collapse: collapse; margin-top: 20px; background: #1e1e1e; }
        th, td { padding: 12px; border-bottom: 1px solid #333; text-align: left; }
        .btn { padding: 8px; border: none; border-radius: 4px; cursor: pointer; color: white; font-weight: bold; }
        input { background: #2a2a2a; border: 1px solid #444; color: white; padding: 5px; border-radius: 4px; }
    </style>
</head>
<body>
    <div style="display: flex; justify-content: space-between;">
        <h1><%= t.title %></h1>
        <div>
            <a href="?lang=fr" style="color:white; margin-right: 10px;">ðŸ‡«ðŸ‡· FR</a>
            <a href="?lang=en" style="color:white;">ðŸ‡ºðŸ‡¸ EN</a>
        </div>
    </div>

    <div style="display: flex; gap: 20px; margin-bottom: 30px;">
        <div class="card"><h3><%= t.st_u %></h3><p><%= stats.u %></p></div>
        <div class="card"><h3><%= t.st_s %></h3><p><%= stats.s %></p></div>
        <div class="card"><h3><%= t.st_g %></h3><p><%= stats.g %>$</p></div>
    </div>

    <h2>ðŸ“¦ <%= t.t_pend %></h2>
    <table>
        <tr><th><%= t.c_pay %></th><th>ISP</th><th>Action</th></tr>
        <% pendingOrders.forEach(o => { %>
            <tr>
                <td><%= o.paymentRef %></td>
                <td><%= o.provider %> ($<%= o.price %>)</td>
                <td>
                    <div style="display: flex; gap: 10px;">
                        <form action="/admin/deliver" method="POST">
                            <input type="hidden" name="orderId" value="<%= o.orderId %>">
                            <input type="text" name="proxyData" placeholder="IP:PORT:USER:PASS" required>
                            <button class="btn" style="background: #27ae60;"><%= t.b_del %></button>
                        </form>
                        <form action="/admin/cancel" method="POST">
                            <input type="hidden" name="orderId" value="<%= o.orderId %>">
                            <input type="text" name="reason" placeholder="Reason" style="width: 80px;">
                            <button class="btn" style="background: #c0392b;"><%= t.b_ref %></button>
                        </form>
                    </div>
                </td>
            </tr>
        <% }); %>
    </table>

    <h2>ðŸ‘¥ <%= t.t_user %></h2>
    <table>
        <tr><th>Email</th><th>Balance</th><th>Action</th></tr>
        <% users.forEach(u => { %>
            <tr>
                <td><%= u.email %></td>
                <td style="color: #2ecc71;"><%= u.balance %>$</td>
                <td>
                    <form action="/admin/add-balance" method="POST">
                        <input type="hidden" name="psid" value="<%= u.psid %>">
                        <input type="number" name="amount" placeholder="+" step="0.01" style="width: 60px;">
                        <button class="btn" style="background: #2980b9;">CrÃ©diter</button>
                    </form>
                </td>
            </tr>
        <% }); %>
    </table>
</body>
</html>
