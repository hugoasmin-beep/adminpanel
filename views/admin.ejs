                <td><%= u.email %></td>
                <td><%= u.balance %>$</td>
                <td>
                    <form action="/admin/add-balance" method="POST" style="display:inline;">
                        <input type="hidden" name="psid" value="<%= u.psid %>">
                        <input type="number" name="amount" placeholder="+" style="width:50px;">
