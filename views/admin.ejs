<!DOCTYPE html>
<html>
<head>
    <title>Admin ProxyFlow</title>
    <style>
        body { font-family: sans-serif; background: #121212; color: white; padding: 20px; }
        .header { display: flex; justify-content: space-between; }
        .stats { display: flex; gap: 20px; margin: 20px 0; }
        .card { background: #1e1e1e; padding: 15px; border-radius: 8px; flex: 1; border: 1px solid #333; text-align: center; }
        table { width: 100%; border-collapse: collapse; background: #1e1e1e; }
        th, td { padding: 12px; border-bottom: 1px solid #333; text-align: left; }
        .btn { padding: 6px 12px; border: none; border-radius: 4px; cursor: pointer; color: white; font-weight: bold; }
        .lang-btn { color: white; text-decoration: none; padding: 5px; border: 1px solid #444; border-radius: 4px; }
    </style>
</head>
<body>
    <div class="header">
        <h1><%= t.title %></h1>
        <div>
            <a href="?lang=fr" class="lang-btn">ðŸ‡«ðŸ‡· FR</a>
            <a href="?lang=en" class="lang-btn">ðŸ‡ºðŸ‡¸ EN</a>
        </div>
    </div>
    
    <div class="stats">
        <div class="card"><h3><%= t.st_u %></h3><p><%= stats.totalUsers %></p></div>
        <div class="card"><h3><%= t.st_s %></h3><p><%= stats.totalSold %></p></div>
        <div class="card"><h3><%= t.st_g %></h3><p><%= stats.totalEarnings %>$</p></div>
    </div>

    <h2><%= t.t_pend %></h2>
    <table>
        <tr><th><%= t.c_pay %></th><th>ISP</th><th>Action</th></tr>
        <% pendingOrders.forEach(o => { %>
            <tr>
                <td><%= o.paymentRef %></td>
                <td><%= o.provider %></td>
                <td>
                    <form action="/admin/deliver" method="POST">
                        <input type="hidden" name="orderId" value="<%= o.orderId %>">
                        <input type="text" name="proxyData" placeholder="IP:PORT:USER:PASS" required>
                        <button class="btn" style="background: #27ae60;"><%= t.b_del %></button>
                    </form>
                </td>
            </tr>
        <% }); %>
    </table>

    <h2><%= t.t_user %></h2>
    <table>
        <tr><th>Email</th><th><%= t.c_bal %></th><th>Actions</th></tr>
        <% users.forEach(u => { %>
            <tr>
                <td><%= u.email %></td>
                <td><%= u.balance %>$</td>
                <td>
                    <form action="/admin/add-balance" method="POST" style="display:inline;">
                        <input type="hidden" name="psid" value="<%= u.psid %>">
                        <input type="number" name="amount" placeholder="+" style="width:50px;">
                        <button class="btn" style="background:#2980b9;"><%= t.b_cre %></button>
                    </form>
                    <form action="/admin/sub-balance" method="POST" style="display:inline;">
                        <input type="hidden" name="psid" value="<%= u.psid %>">
                        <input type="number" name="amount" placeholder="-" style="width:50px;">
                        <button class="btn" style="background:#e67e22;"><%= t.b_deb %></button>
                    </form>
                </td>
            </tr>
        <% }); %>
    </table>
</body>
</html>
